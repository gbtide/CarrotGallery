<resources>

    <!-- Widget styles -->
    <style name="Widget.CarrotGallery" parent="@android:style/Widget.Material" />

    <style name="Widget.CarrotGallery.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- 리스트 빈 화면 나올 때 : TextView 용 -->
    <style name="Widget.CarrotGallery.EmptyResults">
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_normal</item>
        <item name="android:background">@color/bg06</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/tc01</item>
        <item name="android:drawablePadding">@dimen/margin_small</item>
        <item name="android:drawableTop">@drawable/ic_nav_list</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- 에러 화면 나올 때 : TextView 용 -->
    <style name="Widget.CarrotGallery.ErrorResults">
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_normal</item>
        <item name="android:background">@color/bg06</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/tc01</item>
        <item name="android:drawablePadding">@dimen/margin_small</item>
        <item name="android:drawableTop">@drawable/ic_nav_info</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Seekbar -->
    <!--
        <item name="android:progressDrawable">@drawable/carrot_abc_seekbar_track_material</item>
        <item name="android:indeterminateDrawable">@drawable/carrot_abc_seekbar_track_material</item>
        <item name="android:thumb">@drawable/carrot_abc_seekbar_thumb_material</item>
    -->
    <style name="Widget.CarrotGallery.ImageViewerSeekBar" parent="android:Widget">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:progressBackgroundTint">@color/color_control_medium</item>
        <item name="android:progressTint">@color/teal</item>
        <item name="android:thumbTint">@color/teal</item>
    </style>

    <style name="Widget.CarrotGallery.ImageViewerSwitch" parent="">
        <item name="android:thumb">@color/teal</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/color_control_medium</item>

    </style>

</resources>